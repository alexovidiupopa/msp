method a(x: Int, y: Int) returns (z: Int)
  requires 0 < x && x <= y && y < 100
  ensures 0 <= z < 100
{
  z := y - x
}

method b()
{
  var x: Int
  assume 0 <= x && x < 100
  x := 2 * x
  assert 0 <= x < 200
}

method c() {
  var x: Int
  var y: Int
  assume x > 0 && x < y

  x := x + 23
  y := y - 3 * x

  assert x > 23
}

method d() {
  var x: Int
  var y: Bool

  assume x > 0

  x := x + 1
  if (y) {
    var z: Int
    x := x + z
  } else {
    x := 42
  }

  assert (y || x >= 1)
}